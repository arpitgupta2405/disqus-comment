<style type="text/css">
* {
  box-sizing: border-box;
}

body {
  margin: 0;
  padding: 30px;
  font-family: arial;
}

.post-sec {
  width: 600px;
}

input {
  width: 200%;
  height: 40px;
  border: 1px solid #f1f1f1;
  border-radius: 4px;
  padding: 0 10px;
  margin-bottom: 10px;
}

.two-input {
  display: flex;
  align-items: center;
  margin: 0 -10px;
  margin-bottom: 10px;
}

.two-input input {
  margin: 0 10px;
}

.post {
  width: 200%;
  height: 400px;
  border: 1px solid #f1f1f1;
  border-radius: 4px;
  padding: 10px 10px;
  resize: none;
  margin-bottom: 10px;
  margin-left: 100px;
}

textarea {
  width: 100%;
  height: 100px;
  border: 1px solid #f1f1f1;
  border-radius: 4px;
  padding: 10px 10px;
  resize: none;
  margin-bottom: 10px;
}

.comment {
  width: 800px;
  margin-left: 100px;
}

.comment figure {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  margin: 0;
  padding: 0;
}

.comment figure img {
  display: block;
  max-width: 100%;
  border-radius: 50%;
  width: 100%;
  height: 100%;
}

.innerComment {
  padding-left: 100px;
}

.block-comment {
  display: flex;
  margin-bottom: 20px;
}

.comment-content {
  width: calc(100% - 80px);
  padding-left: 20px;
}

.commentTop {
  display: flex;
  align-items: center;
  font-size: 14px;
  margin-bottom: 5px;
}

.commentTop span {
  padding-right: 12px;
}

.commentTop .time {
  color: #777;
  font-size: 12px;
}

.commentTop .name {
  font-weight: 600;
}

.like.liked {
  color: #0079ff;
}

.replay {
  background: #fff;
  border: 0px solid #e1e1e1;
  padding: 0px;
  color: #777;
  font-size: 13px;
  cursor: pointer;
  border-radius: 3px;
}

button.submit {
  background: #075eff;
  border: 1px solid #e1e1e1;
  padding: 10px 28px;
  cursor: pointer;
  font-size: 13px;
  border-radius: 3px;
  color: #fff;
  font-size: 15px;
  font-weight: 600;
}

.replayComment {
  margin-top: 15px;
}

.content {
  color: #5d5b5b;
  font-size: 14px;
  line-height: 19px;
  margin-bottom: 15px;
}

.auth-name {
  margin-left: 110px;
  padding-right: 15px;
  color: #777;
  font-size: 12px;
}

.auth-time {
  padding-right: 12px;
  color: #777;
  font-size: 12px;
}

.post-name {
  margin-left: 100px;
  padding-right: 12px;
  font-size: 30px;
}

</style>
<div class="post-sec">
  <span class="post-name">
    <%= post.name%></span>
  <div class="two-input">
    <span class="auth-name">
      <%= user.userName%>
    </span>
    <span class="auth-time">
      <%= moment(post.updatedTime).format('LLL')%></span>
  </div>
  <textarea class="post"><%= post.postData%></textarea>
</div>
<div class="comment" id="new-comment">
  <% if(comment.length > 0) {%>
  <% for(var i=0;i<comment.length;i++) {%>
  <div class="main-comment">
    <div class="block-comment">
      <%- include('../partials/inner-comment-partial', {innerComment: comment[i]})%>
    </div>
  </div>
  <%if(comment[i].child && typeof comment[i].child!=='undefined'){%>
  <%var childComment = comment[i].child
  childComment =_.sortBy(childComment,['createdTime']);
  childComment =childComment.reverse();
  %>
  <div class="innerComment">
    <% for(var j=0;j<childComment.length;j++) {%>
    <div class="block-comment">
      <%- include('../partials/inner-comment-partial', {innerComment: childComment[j]})%>
      <% if(childComment[j].child && typeof childComment[j].child!=='undefined') {%>
      <%var childComment1 = childComment[j].child 
      childComment1 =_.sortBy(childComment1,['createdTime']);
  childComment1 =childComment1.reverse();%>
      <% for(var k=0;k<childComment1.length;k++) {%>
      <div class="innerComment">
        <div class="block-comment">
          <%- include('../partials/inner-comment-partial', {innerComment: childComment1[k]})%>
        </div>
      </div>
    </div>
    <% } %>
    <% } %>
  </div>
</div>
<%}%>
</div>
<%}%>
</div>
<% } %>
<% } %>
</div>
<button style="margin-left: 100px" class="submit" data-postid="<%= post.id%>" data-slug="<%= post.slug%>" onclick="loadMoreHomePageClick(this)">Load More Comments...</button><br><br>
<div class="submit-comment" style="width: 50%; margin-left: 100px">
  <textarea placeholder="Write a comment..." id="comment"></textarea>
  <button class="submit" data-postid="<%= post.id%>" id="postComment" onclick="postComment(this)">Comment</button>
</div>
