<section class="faq-section">
  <div class="container">
    <h1>Edit Theatre Details</h1>
    <div class="faq-content" id="addNewTheatre">
      <div class="faq-inner-content">
        <div class="contact-sec">
          <ul>
            Name
            <li>
              <input type="text" id="tname" required value="<%= theatre.name%>">
              <span class='error-msg hide' id="error-msg-name"></span>
            </li>
          </ul>
          <ul>
            Seat
            <li>
              <input type="text" id="tseat" required value="<%= theatre.seat%>">
              <span class='error-msg hide' id="error-msg-seat"></span>
            </li>
          </ul>
          <ul>
            Cost
            <li>
              <input type="text" id="tcost" required value="<%= theatre.cost%>">
              <span class='error-msg hide' id="error-msg-cost"></span>
            </li>
          </ul>
          <ul>
            <li>
              Status
              <select id="tstatus">
                <option value="0" <%=(Number(theatre.status)===0) ? 'selected' : '' %>>0</option>
                <option value="1" <%=(Number(theatre.status)===1) ? 'selected' : '' %>>1</option>
              </select>
            </li>
          </ul>
        </div>
        <button type="submit" class="btn btn-primary send-msg-btn" data-id="<%= theatre.id%>" onclick="updateTheatre(this)">Update</button>
        <div class="contact-us-success" id="sign-in-block" style="display:none;">
          <div class="model-success">
            <h2>Thanks for contacting us, our team will get back to you within 6 hours.</h2>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
