<style>
  table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 150%;
}

td,
th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 8px;
}

tr:nth-child(even) {
  background-color: #dddddd;
}

</style>
<section class="faq-section">
  <div class="container">
    <h1>List of Categories</h1>
    <button type="submit" class="btn btn-primary send-msg-btn" onclick="showAddNewMovie(this)">Add New Movie/Event</button>
    <div class="faq-content" id="addNewMovie" style="display: none">
      <div class="faq-inner-content">
        <div class="contact-sec">
          <ul>
            Name:
            <li>
              <input type="text" id="cname" required placeholder="Name*">
              <span class='error-msg hide' id="error-msg-name"></span>
            </li>
          </ul>
          <ul>
            Duration(in Mins):
            <li>
              <input type="text" id="cduration" required placeholder="Duration*">
              <span class='error-msg hide' id="error-msg-duration"></span>
            </li>
          </ul>
          <ul>
            <li>
              Type:
              <select id="ctype">
                <option value="MOVIE">MOVIE</option>
                <option value="EVENT">EVENT</option>
              </select>
            </li>
          </ul>
          <ul>
            <li>
              Theater:
              <select id="theatre">
                <%for(var i=0;i<theatre.length;i++){%>
                <option value="<%=theatre[i].id%>">
                  <%=theatre[i].name%>
                </option>
                <%}%>
              </select>
            </li>
          </ul>
          <ul>
            <li>
              Status:
              <select id="cstatus">
                <option value="0">0</option>
                <option value="1">1</option>
              </select>
            </li>
          </ul>
        </div>
        <button type="submit" class="btn btn-primary send-msg-btn" onclick="addNewMovie(this)">Add</button>
        <div class="contact-us-success" id="sign-in-block" style="display:none;">
          <div class="model-success">
            <h2>Thanks for contacting us, our team will get back to you within 6 hours.</h2>
          </div>
        </div>
      </div>
    </div>
    <div class="faq-content">
      <div class="faq-inner-content">
        <h4>Categories</h4>
        <div class="contact-sec">
          <table>
            <thead>
              <tr>
                <th width="35%">Name</th>
                <th width="10%">Duration</th>
                <th width="10%">Type</th>
                <th width="10%">Status</th>
                <th width="15%"></th>
              </tr>
            </thead>
            <tbody>
              <% for(var i=0;i<categories.length;i++) { %>
              <tr>
                <td>
                  <%= categories[i].name%>
                </td>
                <td>
                  <%= categories[i].duration%>
                </td>
                <td>
                  <%= categories[i].type%>
                </td>
                <td>
                  <%= categories[i].status%>
                </td>
                <td class="table-checkbox">
                  <button data-id="<%= categories[i].id%>" data-name="<%= categories[i].name%>" style="height:20px;margin-left:2%;cursor: pointer;border: none;background: #2480ee;color: #FFF;font-size: 13px;" class="deleteRow" onclick="deleteCategory(this)"><i class="far fa-trash-alt"></i></button> <button data-id="<%= categories[i].id%>" style="height:20px;margin-left:2%;cursor: pointer;border: none;background: #2480ee;color: #FFF;font-size: 13px;" class="editRow"><a href="/admin/edit-category-detail/<%= categories[i].id%>" style="color: white;"><i class="far fa-edit"></i></a></button>
                </td>
              </tr>
              <%}%>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
<button class="scrolltop-btn">
  <i class="fas fa-chevron-up"></i>
</button>
