<figure><img src="<%= cloudFrontPath%><%= innerComment.profilePic%>"></figure>
<div class="comment-content">
  <div class="commentTop">
    <span class="name">
      <%=innerComment.userName%></span>
    <span class="time">
      <%= moment(innerComment.createdTime).calendar()%></span>
  </div>
  <div class="content">
    <%= innerComment.comment%>
  </div>
  <button class="replay" onclick="showReplyBlock(this)">Reply</button>
  <div class="replayComment" style="display: none">
    <textarea placeholder="Write a comment..." class="reply"></textarea>
    <button class="submit" data-parentid="<%= innerComment.id%>" data-postid="<%= post.id%>" onclick="<%= (req.session.userId) ? 'postReply(this)': 'gotoLoginPage()'%>">Comment</button>
  </div>
